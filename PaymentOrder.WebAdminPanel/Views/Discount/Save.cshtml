@using PaymentOrder.WebAdminPanel.Models.Discount

@model SaveDiscountViewModel

<div class="modal-dialog modal-dialog-scrollable modal-lg">
    <!-- Modal content -->
    <div class="modal-content" id="editDebtModelBody">
        <div style="overflow:auto;" class="modal-body">
            <form asp-controller="Discount" asp-action="Submit" class="form-group">
                <input hidden asp-for="Discount.Id" />
                <input hidden asp-for="Discount.IsModified" />
                <input hidden asp-for="Discount.IsCreated" />

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Discount:</label>
                    <input asp-for="Discount.Discount" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Discount.Discount" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Discount Start Date:</label>
                    <input asp-for="Discount.DiscountStartDate" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Discount.DiscountStartDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="name" class="mr-sm-2">Discount End Date:</label>
                    <input asp-for="Discount.DiscountEndDate" class="form-control mb-2 mr-sm-2" />
                    <span asp-validation-for="Discount.DiscountEndDate" class="text-danger"></span>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary bgupdate">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
